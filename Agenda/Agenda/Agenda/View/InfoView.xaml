<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.View.InfoView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
      <RowDefinition Height="40" />
      <RowDefinition Height="40" />
      <RowDefinition Height="40" />
      <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="50" />
    </Grid.ColumnDefinitions>
      <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" x:Name="PrimeiraLetra" FontSize="80" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" TextColor="Black"/>
      <Label x:Name="Telefone" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" TextColor="Black"/>
      <Label x:Name="Email" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" TextColor="Black"/>
      <Label x:Name="NomeCompleto"  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" TextColor="Black"/>
  </Grid>
</ContentPage>