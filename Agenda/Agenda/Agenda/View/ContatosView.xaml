<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.View.ContatosView">
    <ContentPage.ToolbarItems>
      <ToolbarItem Name="Criar"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
      <Button Text="Adicionar Novo Contato" Command="{Binding AdicionarCommand}" VerticalOptions="Center" HorizontalOptions="Center"/>
      <ListView ItemsSource="{Binding ContatosMain}" x:Name="ListaContatos">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Nome}"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
    
  

</ContentPage>